<body>

<% flash.each do |message_type, message| %>
  <div class= "alert alert-light-<%= message_type %> text-success">
    <%= message %>
  </div>
<% end %>

  <p><strong>Title:</strong>
	<%= @post.title %></p>
  <p><strong>Body:</strong>
	<%= @post.body %></p>

  <%= link_to 'Edit', edit_post_path(@post), class:"edit_#{@post.id}" %> | 
  <%= link_to 'Back',  posts_path, class:"back" %>
</body>